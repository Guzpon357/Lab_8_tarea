<!DOCTYPE html>
<html>
    <head>
        <title>Editar Producto</title>
    </head>
    <body>
        <div class="container">
            <h3><a href="/empleados">Lista de empleados</a></h3>
            <h1>Editar datos de empleados</h1>
            <form action="/empleados/update/{{ empleados._id }}" method="post">
                <table>
                    <tbody>
                        <tr>
                            <td>Nombre</td>
                            <td><input type="text" name="nombre" value="{{ empleados.nombre }}" /></td>
                        </tr>
                        <tr>
                            <td>Apellidos</td>
                            <td><input type="text" name="apellido" value="{{ empleados.nombre }}" /></td>
                        </tr>
                        <tr>
                            <td>Edad</td>
                            <td><input type="text" name="edad" value="{{ empleados.edad }}" /></td>
                        </tr>
                        <tr>
                            <td>Estado</td>
                            <td><input type="text" name="estado" value="{{ empleados.estado}}" /></td>
                        </tr>
                        <tr>
                            <td>Sexo</td>
                            <td><input type="text" name="sexo" value="{{ empleados.sexo }}" /></td>
                        </tr>
                        <tr>
                            <td>Especialidad</td>
                            <td><input type="text" name="especialidad" value="{{ empleados.especialidad }}" /></td>
                        </tr>
                        <tr>
                            <td colspan="2"><button type="submit">Update</button></td>
                        </tr>
                    </tbody>
                </table>
            </form>
        </div>
    </body>
</html>
