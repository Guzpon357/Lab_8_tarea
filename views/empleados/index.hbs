<h1>{{title}}</h1>

<h1> Empleados</h1>
    <p >
        <div class="container">
            <h3><a href="/empleados/create">Agregar Empleado</a></h3>
            <h1>Lista de Empleados</h1>
            {{#if empleados }}
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Apellidos</th>
                            <th>Edad</th>
                            <th>Estado</th>
                            <th>Sexo</th>
                            <th>Especialidad</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{# each empleados }}
                        <tr>
                            <td><a href="/empleados/show/{{ _id }}">{{ nombre }}</a></td>
                            <td>{{ apellido }}</td>
                            <td>{{ edad }}</td>
                            <td>{{ estado }}</td>
                            <td>{{ sexo }}</td>
                            <td>{{ especialidad }}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            {{~^~}}
                <div>Empleados no encontrados.</div>
            {{/if}}
        </div>
    </p>
