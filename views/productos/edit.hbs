<!DOCTYPE html>
<html>
    <head>
        <title>Editar Producto</title>
    </head>
    <body>
        <div class="container">
            <h3><a href="/productos">Lista de Productos</a></h3>
            <h1>Editar Producto</h1>
            <form action="/productos/update/{{ productos._id }}" method="post">
                <table>
                    <tbody>
                        <tr>
                            <td>Nombre</td>
                            <td><input type="text" name="nombre" value="{{ productos.nombre }}" /></td>
                        </tr>
                        <tr>
                            <td>Precio</td>
                            <td><input type="text" name="precio_k" value="{{ productos.precio_k}}" /></td>
                        </tr>
                        <tr>
                            <td>Marca</td>
                            <td><input type="text" name="marca" value="{{ productos.marca }}" /></td>
                        </tr>
                        <tr>
                            <td>Calidad</td>
                            <td><input type="text" name="calidad" value="{{ productos.calidad }}" /></td>
                        </tr>
                        <tr>
                            <td colspan="2"><button type="submit">Update</button></td>
                        </tr>
                    </tbody>
                </table>
            </form>
        </div>
    </body>
</html>
